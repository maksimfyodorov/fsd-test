include ./footer-column/footer-column

mixin footer
    -
        var socials = [
                        {url: "#", src: "./img/uikit/headers-footers/twitter.svg", alt: "Twitter-icon"},
                        {url: "#", src: "./img/uikit/headers-footers/fb.svg", alt: "Facebook-icon"},
                        {url: "#", src: "./img/uikit/headers-footers/instagram.svg", alt: "Instagram-icon"},
                        ]

    .footer
        .footer__main-wrap
            .container
                .footer__main
                    .footer__logo
                        .footer__img
                            img(src="./img/uikit/headers-footers/logo-title.svg", alt="Logo")
                        .footer__text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
                    +footer-column("навигация", "О нас", "Новости", "Служба поддержки", "Услуги")
                    +footer-column("О нас", "О сервисе", "Наша команда", "Вакансии", "Инвесторы")
                    +footer-column("Служба поддержки", "Соглашения", "Сообщества", "Связь с нами")
                    .footer__subscribe
                        +label-text-span("Подписка")
                        p Получайте специальные предложения и новости сервиса
                        +text-field({placeholder: "Email", isMedium: true, isSubscr: true})
        .container
            .footer__bottom
                .footer__copyright Copyright &copy; 2018 Toxin отель. Все права защищены.
                .footer__social-media
                    each i in socials
                        a(href=i.url)
                            img(src=i.src, alt=i.alt)