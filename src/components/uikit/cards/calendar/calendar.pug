include ../../colors-type/type/widget-subtitle/widget-subtitle-div

mixin calendar            
    .calendar__wrap
        .calendar__dates-of-stay
            +text-field({text: "ДД.ММ.ГГГГ", isSmall: true, isDropdown: true, title: "прибытие"})
            +text-field({text: "ДД.ММ.ГГГГ", isSmall: true, isDropdown: true, title: "выезд"})
        .calendar
            .calendar__backdrop
            .calendar__month
                .calendar__arrow-prev
                .calendar__date
                    +widget-subtitle-div("Август")
                    +widget-subtitle-div("2019")
                .calendar__arrow-next
            .calendar__weekdays
                div Пн
                div Вт
                div Ср
                div Чт
                div Пт
                div Сб
                div Вс
            .calendar__days
            .calendar__btns
                .calendar__clear-btn очистить
                .calendar__apply-btn применить

